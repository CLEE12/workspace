<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:rowCount="9"
    tools:context="com.ch.a0408calcul.MainActivity">
    <EditText
        android:layout_columnSpan="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edNum1" />
    <EditText
        android:layout_columnSpan="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edNum2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_row="2"
        android:layout_column="0"
        android:id="@+id/num0" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/num1" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/num2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/num3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/num4" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="5"
        android:id="@+id/num5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/num6" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/num7" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/num8" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/num9" />
    <Button
        android:layout_columnSpan="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="더하기"
        android:id="@+id/add" />
    <Button
        android:layout_columnSpan="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="빼기"
        android:id="@+id/min" />
    <Button
        android:layout_columnSpan="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="곱하기"
        android:id="@+id/mul" />
    <Button
        android:layout_columnSpan="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나누기"
        android:id="@+id/div" />
    <TextView
        android:textSize="30sp"
        android:textColor="#ff0000"
        android:layout_columnSpan="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결과"
        android:id="@+id/result" />
</GridLayout>